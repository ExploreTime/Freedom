
/* Drop Tables */

DROP TABLE MOKUAI;
DROP TABLE USERS;




/* Create Tables */

CREATE TABLE MOKUAI
(
	ID INT NOT NULL AUTO_INCREMENT,
	NAME VARCHAR(20),
	IMAGE VARCHAR(20),
	DESCRIPTION VARCHAR(200),
	USERID INT NOT NULL UNIQUE,
	PRIMARY KEY (ID)
);


CREATE TABLE USERS
(
	USERID INT NOT NULL,
	USERNAME VARCHAR(20) NOT NULL,
	PASSWORD VARCHAR(20) NOT NULL,
	HEADIMAGE VARCHAR(200) DEFAULT 'images/1.gif',
	PRIMARY KEY (USERID)
);



/* Create Foreign Keys */

ALTER TABLE MOKUAI
	ADD FOREIGN KEY (USERID)
	REFERENCES USERS (USERID)
	ON UPDATE RESTRICT
	ON DELETE RESTRICT
;



